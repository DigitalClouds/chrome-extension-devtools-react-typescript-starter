{
  "name": "chrome-react-extension-devtools",
  "version": "1.0.0",
  "description": "Base for Chrome extensions with devtools, built with React",
  "main": "index.js",
  "scripts": {
    "build:contentscript-background": "webpack --config webpack.config.js --mode production",
    "build:popup": "npm run build --prefix src/popup && cd src/popup/build && cpy * /static/* ../../../dist/popup --parents",
    "build:devtools": "npm run build --prefix src/devtools && cd src/devtools/build && cpy * /static/* ../../../dist/devtools --parents",
    "build": "npm-run-all build:*",
    "watch:contentscript-background": "webpack --config webpack.config.js -w --mode development",
    "watch:popup": "npm run watch:build --prefix src/popup",
    "watch:devtools": "npm run watch:build --prefix src/devtools",
    "watch": "npm-run-all -parallel watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist && cpy manifest.json dist && cpy src/assets/* dist/assets",
    "prebuild": "npm run clean",
    "prewatch": "npm run clean"
  },
  "author": "David Osborne",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "0.0.88",
    "@types/node": "^12.7.4",
    "awesome-typescript-loader": "^5.2.1",
    "cpy-cli": "^2.0.0",
    "cra-build-watch": "^2.0.1",
    "css-loader": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2",
    "webpack": "4.39.1",
    "webpack-cli": "^3.3.8"
  }
}
